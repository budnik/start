= simple_form_for @activity, :html => { :class => 'form-horizontal' } do |f|
  = f.input :category
  = f.input :deadline
  = f.input :description
  = f.input :state
  = f.input :person_id
  = f.input :volunteer_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), activities_path, :class => 'btn'
