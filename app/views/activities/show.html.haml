- model_class = Activity
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:category) + ':'
  %br
  = @activity.category
%p
  %strong= model_class.human_attribute_name(:deadline) + ':'
  %br
  = @activity.deadline
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @activity.description
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @activity.state
%p
  %strong= model_class.human_attribute_name(:person_id) + ':'
  %br
  = @activity.person_id
%p
  %strong= model_class.human_attribute_name(:volunteer_id) + ':'
  %br
  = @activity.volunteer_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), activities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_activity_path(@activity), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), activity_path(@activity), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
