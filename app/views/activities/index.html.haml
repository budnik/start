- model_class = Activity
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:category)
      %th= model_class.human_attribute_name(:deadline)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:person_id)
      %th= model_class.human_attribute_name(:volunteer_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @activities.each do |activity|
      %tr
        %td= link_to activity.id, activity_path(activity)
        %td= activity.category
        %td= activity.deadline
        %td= activity.description
        %td= activity.state
        %td= activity.person_id
        %td= activity.volunteer_id
        %td=l activity.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_activity_path(activity), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), activity_path(activity), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_activity_path, :class => 'btn btn-primary'
